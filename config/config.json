{
    "name": "Demo",
    "n_gpu": 1,

    "arch": {
        "type": "Demo",
        "args": {}
    },
    "data_loader": {
        "type": "CifarDataLoader",
        "args": {
            "data_dir": "/home/shanehan/workspace/project_ws/pytorch-project/data/train.txt",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "demo_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}